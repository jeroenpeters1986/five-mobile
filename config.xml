<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.jeroenpeters.apps.five"
        version     = "1.0.3"
        versionCode = '3'>

    <!-- GENERAL AND IMPORTANT STUFF -->
    <preference name="phonegap-version" value="3.6.3" />
    <name>Five</name>
    <description>
    Five just checks if it's 5 o'clock already. If not, it tells you where it is 5 o'clock, just to cheer you up!
    </description>
    <author href="http://jeroen.in" email="jeroenpeters1986@gmail.com">
        Jeroen Peters
    </author>
    <content src="index.html" />


    <!-- PhoneGap / Cordova preferences -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="permissions" value="none"/>


    <!-- Default splashscreen and splashcreen enabler -->
    <gap:splash src="res/screen/splash.png" />

    <!-- Android splash screens -->
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"   gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"   gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"   gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png"  gap:platform="android" gap:qualifier="xhdpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"   gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"   gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"   gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png"  gap:platform="android" gap:qualifier="port-xhdpi" />

    <!-- iOS splash screens -->
    <gap:splash src="res/screen/splash.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/screen/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- Windows Phone Splash screen -->
    <gap:splash src="res/screen/windows-phone/winsplash.jpg" gap:platform="winphone" />


    <!-- General icon -->
    <icon src="res/icon/android/icon-96-xhdpi.png" />

    <!-- Android Icons -->
    <platform name="android">
        <icon src="res/icon/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
    </platform>

    <!-- iOS Icon configurations -->
    <platform name="ios">
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/icon.png" width="57" height="57" />
        <icon src="res/icon/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="res/icon/ios/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-50.png" width="50" height="50" />
        <icon src="res/icon/ios/icon-50@2x.png" width="100" height="100" />
    </platform>

    <!-- Windows Phone 7 -->
    <platform name="wp7">
        <icon src="res/icon/windows-phone/icon.png" width="48" height="48" />
    </platform>


    <!-- PREFERENCES -->
	<preference name="InAppBrowserStorageEnabled" value="true" />
	<preference name="DisallowOverscroll" value="true"/>

